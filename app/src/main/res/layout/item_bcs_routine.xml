<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_margin="@dimen/_2sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtDateCustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:padding="@dimen/_2sdp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textSize="@dimen/_8ssp"
                    android:text="1"/>
                <TextView
                    android:id="@+id/txtTypeCustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:padding="@dimen/_2sdp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textSize="@dimen/_8ssp"
                    android:text="2023-01-01"/>
                <TextView
                    android:id="@+id/txtQuantityCustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_2sdp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textSize="@dimen/_8ssp"
                    android:text="Upcoming"/>
                <TextView
                    android:id="@+id/txtPriceCustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:padding="@dimen/_2sdp"
                    android:textStyle="normal"
                    android:gravity="start"
                    android:textSize="@dimen/_8ssp"
                    android:text="বাংলার সাহিত্য"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtTotalPriceCustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="@dimen/_2sdp"
                    android:textStyle="normal"
                    android:gravity="start"
                    android:textSize="@dimen/_8ssp"
                    android:text="১.প্রাচীন বাংলার ইতিহাস ১.প্রাচীন বাংলার ইতিহাস"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>